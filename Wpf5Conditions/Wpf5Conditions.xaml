<Window 
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
       Title="Wpf5Conditions" Height="300" Width="300">
    <Grid>
        <Label x:Name="label" Content="Label" HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" VerticalAlignment="Top" Width="272"/>
        <CheckBox x:Name="checkBox" Content="CheckBox" HorizontalAlignment="Left" Height="25" Margin="10,60,0,0" VerticalAlignment="Top" Width="237" Checked="checkBox_Checked" Unchecked="checkBox_Unchecked"/>
        <CheckBox x:Name="checkBox1" Content="CheckBox" HorizontalAlignment="Left" Height="25" Margin="10,90,0,0" VerticalAlignment="Top" Width="237" RenderTransformOrigin="0.527,0.03" Checked="checkBox1_Checked" Unchecked="checkBox1_Unchecked"/>
        <CheckBox x:Name="checkBox2" Content="CheckBox" HorizontalAlignment="Left" Height="25" Margin="10,120,0,0" VerticalAlignment="Top" Width="237" RenderTransformOrigin="0.41,1.439" Checked="checkBox2_Checked" Unchecked="checkBox2_Unchecked"/>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Height="24" Margin="10,222,0,0" VerticalAlignment="Top" Width="105" Click="button_Click"/>
        <Label x:Name="label4" Content="Label" HorizontalAlignment="Left" Height="26" Margin="10,170,0,0" VerticalAlignment="Top" Width="254"/>
    </Grid>
</Window> 
